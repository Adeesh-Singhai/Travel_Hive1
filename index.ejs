<%- layout("/layouts/boilerplate") %>
<body>
  <style>
    /* Navbar styles */
    .navbar {
      z-index: 1030;
      position: relative;
      background-color: white;
    }

    .navbar-collapse {
      background-color: white;
    }

    /* Main content and filters */
    .main-content {
      padding-top: 1rem;
      position: relative;
    }

    .reduced-space {
      display: block;
      height: 5px;
    }

    #filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      padding: 1rem 0;
      position: relative;
      z-index: 1;
    }

    #desktop-filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      flex-grow: 1;
    }

    .filter {
      text-align: center;
      margin-right: 2rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      opacity: 0.8;
      cursor: pointer;
    }

    .filter:hover {
      opacity: 1;
    }

    .filter p {
      font-size: 0.8rem;
      margin-top: 0.5rem;
      margin-bottom: 0;
    }

    .tax-info {
      display: none;
    }

    .tax-toggle {
      border: 1px solid black;
      border-radius: 1rem;
      height: 3rem;
      padding: 1rem;
      margin-left: auto;
      display: flex;
      align-items: center;
    }

    /* Mobile styles */
    .filters-toggle-btn {
      display: none;
      align-items: center;
      padding: 0.5rem 1rem;
      border: 1px solid black;
      border-radius: 1rem;
      background: none;
      margin-right: 1rem;
    }

    .filters-toggle-btn i {
      margin-right: 0.5rem;
    }

    .offcanvas-filters {
      display: none;
    }

    /* Media query for mobile devices */
    @media (max-width: 768px) {
      .navbar-collapse {
        position: absolute;
        width: 100%;
        top: 100%;
        left: 0;
        padding: 1rem;
        border-bottom: 1px solid #dee2e6;
      }

      #desktop-filters {
        display: none;
      }

      .filters-toggle-btn {
        display: flex;
      }

      .offcanvas-filters {
        display: block;
        padding: 1rem;
      }

      .offcanvas-filters .filter {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin: 1rem 0;
      }

      .offcanvas-filters .filter p {
        margin: 0 0 0 1rem;
      }

      .offcanvas-backdrop.show {
    opacity: 0;
}

      #filters {
        justify-content: flex-end;
        margin-top: 0;
      }

      .navbar-collapse.show + .main-content {
        margin-top: 200px;
      }
    }
  </style>

  <div id="filters">
    <!-- Mobile filters toggle button -->
    <button
      class="filters-toggle-btn"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#filtersOffcanvas"
    >
      <i class="fa-solid fa-sliders"></i>
      Filters
    </button>

    <!-- Desktop filters -->
    <div id="desktop-filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Hill Stations</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-hiking"></i></div>
        <p>Treks</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beaches</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-sailboat"></i></div>
        <p>Boating</p>
      </div>
    </div>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>

  <!-- Offcanvas component -->
  <div
    class="offcanvas offcanvas-start"
    tabindex="-1"
    id="filtersOffcanvas"
    aria-labelledby="filtersOffcanvasLabel"
  >
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="filtersOffcanvasLabel">Filters</h5>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="offcanvas"
        aria-label="Close"
      ></button>
    </div>
    <div class="offcanvas-body">
      <div class="offcanvas-filters">
        <div class="filter">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Iconic cities</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-mountain-sun"></i></div>
          <p>Hill Stations</p>
        </div>
        <div class="filter">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Pools</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-person-hiking"></i></div>
          <p>Treks</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </div>
        <div class="filter">
          <div><i class="fa-regular fa-snowflake"></i></div>
          <p>Arctic</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-umbrella-beach"></i></div>
          <p>Beaches</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-sailboat"></i></div>
          <p>Boating</p>
        </div>
      </div>
    </div>
  </div>

  <!-- listing cards -->
  <!-- script -->
<!-- </body> -->

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col mb-4">
        <div
          id="carousel-<%= listing._id %>"
          class="carousel slide carousel-image"
        >
          <!-- Carousel Indicators -->
          <div class="carousel-indicators">
            <% for(let i = 0; i < 3; i++) { %>
            <button
              type="button"
              data-bs-target="#carousel-<%= listing._id %>"
              data-bs-slide-to="<%= i %>"
              class="<%= i === 0 ? 'active' : '' %>"
              aria-current="<%= i === 0 ? 'true' : '' %>"
              aria-label="Slide <%= i + 1 %>"
            ></button>
            <% } %>
          </div>

          <!-- Carousel Images -->
          <div class="carousel-inner">
            <% if (listing.images.length > 0) { %> <% for (let i = 0; i < 3;
            i++) { %>
            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
              <img
                src="<%= i < listing.images.length ? listing.images[i].url : listing.images[0].url %>"
                class="d-block w-100 card-img-top"
                alt="Listing Image"
                style="height: 20rem"
              />
            </div>
            <% } %> <% } else { %>
            <!-- Default images if none provided -->
            <div class="carousel-item active">
              <img
                src="https://c0.wallpaperflare.com/preview/153/428/1002/buildings-near-body-of-water-during-nighttime.jpg"
                class="d-block w-100 card-img-top"
                alt="Default Image 1"
                style="height: 20rem"
              />
            </div>
            <div class="carousel-item">
              <img
                src="https://w0.peakpx.com/wallpaper/745/650/HD-wallpaper-bedroom-architecture-pretty-house-interior-beautiful-villa-sea-modern-nice-calm-flowers-room-mirror-reflection-luxury-harmony-hotel-cozy-lovely-view-balcony-ocean-design-water.jpg"
                class="d-block w-100 card-img-top"
                alt="Default Image 2"
                style="height: 20rem"
              />
            </div>
            <div class="carousel-item">
              <img
                src="https://w0.peakpx.com/wallpaper/366/923/HD-wallpaper-lovely-pool-polynesia-sea-beach-round-aqua-swimming-blue-exotic-islands-view-ocean-pacific-pool-paradise-jacuzzi-island-tropical.jpg"
                class="d-block w-100 card-img-top"
                alt="Default Image 3"
                style="height: 20rem"
              />
            </div>
            <% } %>
          </div>

          <!-- Carousel Controls -->
          <button
            class="carousel-control-prev custom-control"
            type="button"
            data-bs-target="#carousel-<%= listing._id %>"
            data-bs-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next custom-control"
            type="button"
            data-bs-target="#carousel-<%= listing._id %>"
            data-bs-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>

        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %>,</b>
            <% let loc=listing.location.trim(); %>
            <b><%= loc %><br /></b>
            &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") :
            "N/A" %>/night
            <i class="tax-info"> &nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      // Carousel functionality
      document.querySelectorAll(".carousel").forEach(function (carousel) {
        var totalItems = carousel.querySelectorAll(".carousel-item").length;
        var bsCarousel = new bootstrap.Carousel(carousel, {
          interval: 2000,
          ride: false,
        });

        bsCarousel.pause();

        carousel.parentElement.addEventListener("mouseenter", function () {
          let currentIndex = 0;
          bsCarousel.to(0);

          function showNextImage() {
            if (currentIndex < totalItems) {
              bsCarousel.next();
              currentIndex++;
              setTimeout(showNextImage, 1500);
            } else {
              bsCarousel.to(0);
            }
          }

          showNextImage();
        });

        carousel.parentElement.addEventListener("mouseleave", function () {
          bsCarousel.pause();
          bsCarousel.to(0);
        });
      });

      // Tax toggle functionality
      let taxSwitch = document.getElementById("flexSwitchCheckDefault");
      taxSwitch.addEventListener("click", function () {
        let taxInfo = document.getElementsByClassName("tax-info");
        for (let i = 0; i < taxInfo.length; i++) {
          if (taxInfo[i].style.display != "inline") {
            taxInfo[i].style.display = "inline";
          } else {
            taxInfo[i].style.display = "none";
          }
        }
      });
    });
  </script>
</body>
